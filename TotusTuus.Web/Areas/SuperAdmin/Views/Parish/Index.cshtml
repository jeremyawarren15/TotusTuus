@model TotusTuus.Web.Areas.SuperAdmin.Models.Parish.ParishIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { area = "SuperAdmin" })
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            City
        </th>
        <th>
            State
        </th>
        <th></th>
    </tr>

@foreach (var parish in Model.Parishes) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => parish.ParishName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => parish.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => parish.State)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { area = "SuperAdmin", id=parish.Id }) |
            @Html.ActionLink("Details", "Details", new { area="SuperAdmin", id=parish.Id }) |
            @Html.ActionLink("Delete", "Delete", new { area="SuperAdmin", id=parish.Id })
        </td>
    </tr>
}

</table>
